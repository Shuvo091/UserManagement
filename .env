# Database Configuration
DB_CONNECTION_STRING=Host=postgres;Port=5432;Database=user_management;Username=postgres;Password=postgres;Pooling=true;

# Redis Configuration
REDIS_CONNECTION_STRING=redis:6379,abortConnect=false

# Identity Server Configuration
IdentityServer__Authority=https://dev.vectormind.chat/security
IdentityServer__ApiName=api

# Feature Flags
ENABLE_GRPC=false
ENABLE_ID_DOCUMENT_COLLECTION=true
POPIA_COMPLIANCE_MODE=strict

# Elo Rating Configuration
INITIAL_ELO_RATING=1200
ELO_K_FACTOR_NEW=32
ELO_K_FACTOR_ESTABLISHED=24
ELO_K_FACTOR_EXPERT=16

# Performance Configuration
JOB_TIMEOUT_HOURS=4
MAX_CONCURRENT_JOBS=3
REDIS_CACHE_TTL_MINUTES=360

# Workflow Engine
WORKFLOW_ENGINE_BASE_URI=http://workflow-engine:5000

# JWT Configuration
Jwt__Audience=api
Jwt__Issuer=https://dev.vectormind.chat/security